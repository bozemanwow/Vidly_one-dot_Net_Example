@model Vidly_one.ViewModels.MovieListViewModel
@{
    ViewBag.Title = "DisplayMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Movies.Count > 0)
{
    <h2>Movies</h2>
    <table class="table table-borded table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>

        </thead>
        <tbody>


            @foreach (var movie in Model.Movies)
            {
                <tr>

                    <td>
                        @Html.ActionLink(movie.Name, "MovieDetails", "Movies", new { Id = movie.Id }, null)
                    </td>
                    <td>
                        @movie.GenreType.Name
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h2>No Logged Movies</h2>
}